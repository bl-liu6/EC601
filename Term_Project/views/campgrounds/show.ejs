<% layout('layouts/boilerplate')%>

    <div class="row">
        <div class="col-6 offset-3">
            <div class="card mb-3">
                <img src="<%= campground.image%>" class="card-img-top">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= campground.title%>
                    </h5>
                    <p class="card-text">
                        <%= campground.description%>
                    </p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item text-muted">
                        <%= campground.location%>
                    </li>
                    <li class="list-group-item">
                        $<%= campground.price%> / night
                    </li>
                </ul>
                <div class="card-body">
                    <a href="/campgrounds/<%=campground._id%>/edit" class="btn btn-outline-info">Edit</a>
                    <a href="/campgrounds/<%=campground._id%>?_method=DELETE" class="btn btn-outline-danger">Delete</a>
                </div>
                <div class="card-footer textmuted text-muted">
                    2 days ago
                    <!-- <a href="/campgrounds">All Campgrounds</a> -->
                </div>
            </div>
        </div>
    </div>

